<Window x:Class="NewSkills.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewSkills"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="MessageBox" Margin="40,0,0,0" Height="100" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Text="Вы уверены, что хотите начать сначала ? " VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10"/>
        <Button Name="confirmBtn" Click="confirmBtn_Click" Content="Да" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="21,35,0,41"/>
        <Button Name="cancelBtn" Click="cancelBtn_Click" Content="Нет" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Height="30" Margin="0,35,20,41"/>
    </Grid>
</Window>
